% proof box, but with complete boxes
% across page breaks
\newenvironment{pagedprf}[1][Proof]
{\begin{center}
\begin{tcolorbox}[%
    enhanced,
    breakable,
    frame hidden,
    colback = white,
    overlay unbroken = {
        \draw[line width=1.5pt, Plum!50, rounded corners=7pt]
        (frame.north west) rectangle (frame.south east);},
    overlay broken = {
        \draw[line width=1.5pt, Plum!50, rounded corners=7pt]
        (frame.north west) rectangle (frame.south east);}]
    \textit{#1. }\ignorespaces}
{\end{tcolorbox}
\end{center}
}

